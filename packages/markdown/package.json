{
  "name": "@writerkit/markdown",
  "version": "0.0.1",
  "description": "Markdown-native storage and AST conversion for WriterKit",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@writerkit/core": "workspace:*",
    "gray-matter": "^4.0.3",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "micromark": "^4.0.0",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "license": "MIT"
}
