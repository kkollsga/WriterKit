{
  "name": "writerkit",
  "version": "0.1.0",
  "description": "A ProseMirror-based toolkit for building word processors with native pagination, searchable PDF export, and markdown storage",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js"
    },
    "./markdown": {
      "types": "./dist/markdown/index.d.ts",
      "import": "./dist/markdown/index.mjs",
      "require": "./dist/markdown/index.js"
    },
    "./pagination": {
      "types": "./dist/pagination/index.d.ts",
      "import": "./dist/pagination/index.mjs",
      "require": "./dist/pagination/index.js"
    },
    "./export": {
      "types": "./dist/export/index.d.ts",
      "import": "./dist/export/index.mjs",
      "require": "./dist/export/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.mjs",
      "require": "./dist/storage/index.js"
    },
    "./extensions": {
      "types": "./dist/extensions/index.d.ts",
      "import": "./dist/extensions/index.mjs",
      "require": "./dist/extensions/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "prosemirror",
    "editor",
    "word-processor",
    "pagination",
    "pdf-export",
    "docx-export",
    "odt-export",
    "markdown",
    "rich-text",
    "wysiwyg",
    "document-editor",
    "text-editor"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.19.4",
    "prosemirror-schema-basic": "^1.2.2",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.7",
    "gray-matter": "^4.0.3",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "micromark": "^4.0.0",
    "unified": "^11.0.4",
    "docx": "^8.5.0",
    "pdf-lib": "^1.17.1",
    "@pdf-lib/fontkit": "^1.1.1"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkollsga/WriterKit.git",
    "directory": "packages/writerkit"
  },
  "homepage": "https://github.com/kkollsga/WriterKit#readme",
  "bugs": {
    "url": "https://github.com/kkollsga/WriterKit/issues"
  },
  "author": "kkollsga",
  "license": "MIT"
}
